{
  "hosting": {
    "site": "formable",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://formable.onrender.com/forms/:splat/submit"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
